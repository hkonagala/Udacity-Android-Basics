<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harikakonagala.scorechecker.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_teama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="Team A"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="0"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_threepointer_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="?android:attr/colorPressedHighlight"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="3 Pointer" />

            <Button
                android:id="@+id/bt_twopointer_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="?android:attr/colorPressedHighlight"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="2 Pointer" />

            <Button
                android:id="@+id/bt_free_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="?android:attr/colorPressedHighlight"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="FREE throw" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_teamb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="Team B"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="0"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bt_threepointer_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="?android:attr/colorPressedHighlight"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="3 Pointer" />

            <Button
                android:id="@+id/bt_twopointer_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="?android:attr/colorPressedHighlight"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="2 Pointer" />

            <Button
                android:id="@+id/bt_free_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="?android:attr/colorPressedHighlight"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="FREE throw" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/colorPressedHighlight"
        android:text="reset" />

</RelativeLayout>
