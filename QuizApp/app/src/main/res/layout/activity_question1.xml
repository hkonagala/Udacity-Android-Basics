<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harikakonagala.quizapp.Question1">


    <TextView
        android:id="@+id/tv_q1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="TextView" />

    <RadioButton
        android:id="@+id/rb_q1opt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_q1"
        android:layout_marginTop="50dp"
        android:text="RadioButton" />

    <RadioButton
        android:id="@+id/rb_q1opt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rb_q1opt1"
        android:layout_marginTop="50dp"
        android:text="RadioButton" />

    <RadioButton
        android:id="@+id/rb_q1opt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RadioButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/rb_q1opt2"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:id="@+id/rb_q1opt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rb_q1opt3"
        android:layout_marginTop="50dp"
        android:text="RadioButton" />

    <Button
        android:id="@+id/bt_q1next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb_q1opt4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/holo_green_dark"
        android:text="next" />
    
</RelativeLayout>
